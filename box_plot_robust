import pandas as pd
import matplotlib.pyplot as plt
import numpy as np
from sklearn.preprocessing import RobustScaler

df = pd.read_excel('CW_Data.xlsx')

scaler = RobustScaler()

df_scaled = scaler.fit_transform(df.select_dtypes(include=[np.number]))

df_scaled = pd.DataFrame(df_scaled, columns=df.select_dtypes(include=[np.number]).columns)

data_to_plot = [df_scaled[col].dropna() for col in df_scaled]

plt.figure(figsize=(10, 8))
plt.boxplot(data_to_plot)

plt.xticks([i + 1 for i in range(len(data_to_plot))], [col for col in df_scaled])
plt.ylabel('Scaled values (Robust Scaling)')
plt.title('Box plot of all columns in the dataframe (Robustly Scaled)')
plt.grid(True)
plt.show()
