import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.canvas.Canvas;
import javafx.scene.paint.Color;

import java.util.ArrayList;
import java.util.Map;

public class valueBase {
    private static int width = 20; // Width of a rectangle
    private static int startX_L = 110; // The position at which the left rectangle begins
    private static int startX_curve = startX_L + width; // The x-coordinate of the beginning of the Bezier curve
    private static double startX_R = 400; // The starting position of the right rectangle
    private static int startY = 10;
    private static int offset = 20; // Offset of text relative to graphics
    private static int distance = 35; // The distance between the small rectangles on the right
    private static double frameSize = 500; // The size of the whole picture

    private static Map<String, Integer> expenses; // Data read from a file
    private static String[] firstTwoLines; // The first two lines of the file
    private static int total;

    private static ArrayList<Color> COLORS = new ArrayList<>();
    static {
        COLORS.add(Color.RED);
        COLORS.add(Color.ORANGE);
        COLORS.add(Color.YELLOW);
        COLORS.add(Color.GREEN);
        COLORS.add(Color.PURPLE);
        COLORS.add(Color.BROWN);
        COLORS.add(Color.PINK);
        COLORS.add(Color.GRAY);
        // Add some common colors
        // The normal color is too bright and ugly. Change the color
        for (int i = 0; i < COLORS.size(); i++) {
            COLORS.set(i, COLORS.get(i).deriveColor(0, 1, 1, 0.5));
        }
    }

    private Group root = new Group();
    private Scene scene = new Scene(root, 600, 650, Color.WHITE);
    private Canvas canvas = new Canvas(1500, 1500);

    public static int getWidth() {
        return width;
    }

    public static int getStartXLeft() {
        return startX_L;
    }

    public static int getStartXCurve() {
        return startX_curve;
    }

    public static double getStartXRight() {
        return startX_R;
    }

    public static void setStartXRight(double startXRight) {
        startX_R = startXRight;
    }

    public static int getStartY() {
        return startY;
    }

    public static int getTextOffset() {
        return offset;
    }

    public static int getDistance() {
        return distance;
    }

    public static double getFrameSize() {
        return frameSize;
    }

    public static void setPlotSize(double plotSize) {
        frameSize = plotSize;
    }

    public static Map<String, Integer> getExpenses() { return expenses; }

    public static void setExpenses(Map<String, Integer> expenses1) {
        expenses = expenses1;
    }

    public static String[] getFirstTwoLines() {
        return firstTwoLines;
    }

    public static void setFirstTwoLines(String[] firstTwoLines1) {
        firstTwoLines = firstTwoLines1;
    }

    public static int getTotal() {
        return total;
    }

    public static void setTotal(int total1) {
        total = total1;
    }

    public Group getRoot() {
        return root;
    }

    public Scene getScene() {
        return scene;
    }

    public Canvas getCanvas() {
        return canvas;
    }

    public static ArrayList<Color> getColors() {
        return COLORS;
    }
}
